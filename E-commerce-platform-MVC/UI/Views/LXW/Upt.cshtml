                    })
                    function BandSelCarType() {
                        $.ajax({
                            url: "http://localhost:50222/xxx/try1",
                            type: 'Get',
                            dataType: 'json',
                            async: true,
                            crossDomain: true,
                            contents: "application/json",
                            success: function (d) {
                                $("#Pdd").empty();
                                $("#Pdd").append("<option value=''>--请选择--</option>");
                                $(d).each(function () {
                                    var opt = "<option value=" + this.did + ">" + this.dname + "</option>";
                                    $("#Pdd").append(opt);
                                })
                            }
                        })
                    }
                    function LinkTo() {
                        location.href = '/Power/Show';
                    }
                    
                   
