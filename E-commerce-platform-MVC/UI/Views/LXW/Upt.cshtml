                <script src="~/lib/jquery/dist/jquery.js"></script>
                <script>
                    $(function () {
                        Fill();
                       
                    })

                    function Fill() {
                        var id = location.search.substr(location.search.indexOf('=') + 1);
                        var sid = parseInt(id);

                        $.ajax({
                            url: 'http://localhost:50222/LXW/LxwFill?id=' + sid,
                            type: 'get',
                            dataType: 'json',
                            async: true,
                            crossDomain: true,
                            success: function (d) {
                                $("#Mname").val(d.mname);
                                $("#Modile").val(d.modile);
                                $("#Pdd").val(d.did);
                                if (d.mstate==true) {
                                    $("#cb").prop("checked", true);

                                }
                                else {
                                    $("#cbc").prop("checked", true);

                                }
                               
                               
                                $("#Cwen").val(d.mnotes);
                            }
                        })
                    }

                    function Upt() {

                        var id = location.search.substr(location.search.indexOf('=') + 1);
                        var sid = parseInt(id);

                        var obj = {};
                        obj.MId = sid;
                        obj.Mname = $("#Mname").val();
                        obj.Modile = $("#Modile").val();
                        obj.did = parseInt($("#Pdd").val());
                        if (obj.Mstate==true) {
                            obj.Mstate = $("#cb").prop("checked");
                        }
                        else {
                            obj.Mstate = $("#cbc").prop("checked");
                        }
                       
                        obj.Mnotes = $("#Mnotes").val();

                        $.ajax({
                            url: 'http://localhost:50222/LXW/LxwUpt?uid='+ sid,
                            type: 'post',
                            data: JSON.stringify(obj),
                            contentType: "application/json",
                            dataType: 'json',
                            success: function (d) {
                                if (d > 0) {
                                    alert('修改成功');
                                    location.href = '/LXW/Show';
                                }
                                else {
                                    alert('修改失败');
                                }
                            }
                        })
                    }
                    $(function () {
