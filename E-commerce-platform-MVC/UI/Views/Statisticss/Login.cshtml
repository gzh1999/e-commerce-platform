
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <title>CSS3登录注册切换动画模板 - 站长素材</title>

    <link href="~/moban3897/moban3897/css/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/moban3897/moban3897/css/style.css" rel="stylesheet" />

    <script src="~/GZHjs/img_ver.js"></script>
    <script src="~/GZHjs/jquery.min.js"></script>
    <link href="~/imgVer/style.css" rel="stylesheet" />

    <script src="~/GZHjs/md5.js"></script>

</head>
<body>

    <div class="materialContainer">
        <div class="box">
            <div class="title">登录</div>
            <div class="input">
                <label for="name">用户名</label>
                <input type="text" name="name" id="name">
                <span class="spin"></span>
            </div>
            <div class="input">
                <label for="pass">密码</label>
                <input type="password" name="pass" id="pass">
                <span class="spin"></span>
            </div>
            <div class="verBox" id="yzImg">
                <div id="imgVer" style="display:inline-block;"></div>
            </div>
            <div class="button login">
                <button onclick="Login()">
                    <span>登录</span>
                    <i class="fa fa-check"></i>
                </button>
            </div>
            <a href="javascript:" class="pass-forgot">忘记密码？</a>
        </div>


        <div class="overbox">
            <div class="material-button alt-2">
                <span class="shape"></span>
            </div>

            <div style="position:absolute; height:400px;overflow-y:auto">
                <div class="title">注册</div>

                <div class="input">
                    <label for="Uname">用户名</label>
                    <input type="text" name="Uname" id="Uname">
                    <span class="spin"></span>
                </div>
                <div class="input">
                    <label for="RealName">真实姓名</label>
                    <input type="text" name="RealName" id="RealName">
                    <span class="spin"></span>
                </div>
                <div class="input">
                    <label for="Pass">密码</label>
                    <input type="password" name="Pass" id="Pass">
                    <span class="spin"></span>
                </div>
                <div class="input">
                    <label for="reregpass">确认密码</label>
                    <input type="password" name="reregpass" id="reregpass">
                    <span class="spin"></span>
                </div>
                <div class="input">
                    <label for="Email">电子邮件</label>
                    <input type="text" name="Email" id="Email">
                    <span class="spin"></span>
                </div>

                <div class="input">
                    <label for="Core">请输入邮箱验证码</label>
                    <input type="text" name="Core" id="Core">
                    <span class="spin"></span>
                </div>
                <div class="input">
                    <label for="Phone">手机号</label>
                    <input type="text" name="Phone" id="Phone">
                    <span class="spin"></span>
                </div>
                <div class="button">
                    <button onclick="LoginAdd()">
                        <span>注册</span>
                    </button>
                    <input id="Hidden1" type="hidden" />
                </div>
            </div>
        </div>
    </div>
    <div>
        <input id="Button1" type="button" value="获取邮箱验证码" onclick="GetYX()" class="btn btn-info" />
    </div>
    <script src="D:\大实训二\电商代码MVC\E-commerce-platform-MVC\UI\moban3897\moban3897\js\jquery.min.js"></script>
    <script src="~/GZHjs/index.js"></script>


</body>
</html>

<script>

    //登录加验证码
    function Login() {
        var obj = {};
        obj.Uname = $("#name").val();
        obj.Pass = hex_md5("#Pass");;
        if ($("#name").val() == "") {
            alert('请输入账号');
            return;
        }
        if ($("#pass").val() == "") {
            alert('请输入密码');
            return;
        }

        $(".verBox").css({
            "left": "0",
            "opacity": "1"
        });
        imgVer({
            el: '$("#imgVer")',
            width: '260',
            height: '116',
            img: [
                '../imgVer/images/ver-4.png',
                '../imgVer/images/ver-5.png',
                '../imgVer/images/ver-6.png',
                '../imgVer/images/ver-7.png',
                '../imgVer/images/ver-8.png'
            ],

            success: function () {
                $.ajax({
                    url: 'http://localhost:50222/api/UserInfo',
                    type: 'post',
                    data: JSON.stringify(obj),
                    contentType: "application/json",
                    success: function (d) {
                        if (d != "") {

                            alert('登录成功');
                            location.href = 'http://localhost:50871/Statisticss/Homepage';
                        }
                        else {
                            alert('登录失败');
                            $(".verBox").css({
                                "position": "absolute",
                                "width": "100 %",
                                "text- align": "center",
                                "left": "600px",
                                "top": "0",
                                "opacity": "1",
                                "transition": "all 0.8s",
                                "padding - top": "85px",
                            });
                            return;
                        }
                    }
                })
            }
        });
    }
    //获取邮箱验证码
    function GetYX() {
        var Email = $("#Email").val();

        $.ajax({
            url: 'http://localhost:50222/api/UserInfoAdd/QQMailMessage?Email=' + Email,
            type: 'get',

            success: function (d) {
                alert('发送成功');
                $("#Hidden1").val(d);
            }
        })
    }

    //注册
    function LoginAdd() {
        var obj = {};
        obj.Email = $("#Email").val();
        obj.Uname = $("#Uname").val();
        obj.RealName = $("#RealName").val();
        obj.Pass = hex_md5("#Pass");
        obj.Phone = $("#Phone").val();

        var Pass = $("#Pass").val();
        var reregpass = $("#reregpass").val();


        //密码验证
        var regPass = /^[a-zA-Z]\w{5,17}$/;

        if (!regPass.test(Pass)) {
            alert('请正确输入您的密码！(字母开头6--18位)');
            return;
        }
        //确认密码判断
        if (Pass != reregpass) {
            alert('两次输入密码不一致！');
            return;
        }

        if ($("#Email").val() == "") {
            alert('请输入邮箱')
        }

        var Core = $("#Core").val();
        var hidden = $("#Hidden1").val();
        if (Core != hidden) {
            alert("验证码错误！");
            return;
        }
        //手机号判断
        var Phone = $("#Phone").val();
        var regPhone = /^1\d{10}$/;
        if (!regPhone.test(Phone)) {
            alert('请输入正确的手机号格式)');
            return;
        }

        //注册
        $.ajax({
            url: 'http://localhost:50222/api/UserInfoAdd/LoginAdd',
            type: 'post',
            data: JSON.stringify(obj),
            contentType: "application/json",
            success: function (d) {
                if (d != "") {
                    alert('注册成功');

                }
                else {
                    alert('注册失败');
                    return;
                }
            }
        })
    }

</script>

<style>
    .verBox {
        position: absolute;
        width: 100%;
        text-align: center;
        left: 420px;
        top: 0;
        opacity: 1;
        transition: all 0.8s;
        padding-top: 300px;
        margin-left: 380px;
    }
</style>



